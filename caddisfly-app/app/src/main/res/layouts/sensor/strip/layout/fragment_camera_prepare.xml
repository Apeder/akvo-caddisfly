<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    tools:context=".sensor.colorimetry.strip.camera.CameraPrepareFragment">

    <include layout="@layout/partial_quality_meter" />

    <TextView
        android:id="@+id/text_qualityCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_qualityMeter"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="16sp"
        tools:ignore="UnknownIdInLayout"
        tools:text="Quality checks: 0 out of 15" />

    <TextView
        android:id="@+id/text_prepareInfo"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_next"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:text="@string/prepare_camera_instr"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_next"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/next"
        android:theme="?primaryButtonStyle" />
</RelativeLayout>

