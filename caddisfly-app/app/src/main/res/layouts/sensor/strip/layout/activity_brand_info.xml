<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sensor.colorimetry.strip.ui.BrandInfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <include layout="@layout/toolbar" />

        <ImageView
            android:id="@+id/fragment_choose_strip_testImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_prepare"
            android:layout_below="@+id/toolbar"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            tools:ignore="UnknownIdInLayout"
            tools:src="@android:drawable/ic_menu_gallery" />

        <Button
            android:id="@+id/button_prepare"
            style="@style/Button"
            android:layout_above="@+id/button_instructions"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:minWidth="250dp"
            android:text="@string/prepare_test"
            android:theme="?primaryButtonStyle" />

        <Button
            android:id="@+id/button_instructions"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:drawableEnd="@drawable/ic_play_arrow_white_18dp"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:text="@string/instructions"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
