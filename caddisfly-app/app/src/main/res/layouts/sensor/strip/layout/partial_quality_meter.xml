<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_qualityMeter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@android:color/background_light"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <org.akvo.caddisfly.sensor.colorimetry.strip.ui.QualityCheckBrightnessView
            android:id="@+id/quality_brightness"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quality_check_view_height" />

        <TextView
            android:id="@+id/text_brightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/light"
            android:textColor="@android:color/tertiary_text_dark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <org.akvo.caddisfly.sensor.colorimetry.strip.ui.QualityCheckShadowsView
            android:id="@+id/quality_shadows"
            android:layout_width="match_parent"
            android:layout_height="@dimen/quality_check_view_height"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/text_shadows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/contrast"
            android:textColor="@android:color/tertiary_text_dark" />

    </LinearLayout>
</LinearLayout>