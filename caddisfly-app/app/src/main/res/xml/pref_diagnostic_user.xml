<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <org.akvo.caddisfly.preference.PreferenceCategoryCustom
        android:key="preferenceCategoryDiagnostics"
        android:title="@string/diagnosticsUser">
        <CheckBoxPreference
            android:key="@string/noBackdropDetectionKey"
            android:title="@string/noBackdropDetection" />
        <CheckBoxPreference
            android:key="@string/useExternalCameraKey"
            android:title="Use External Camera" />
        <CheckBoxPreference
            android:key="@string/externalCameraMultiDeviceModeKey"
            android:title="External camera multi-device mode" />
        <CheckBoxPreference
            android:key="@string/saveImagesKey"
            android:title="@string/saveImages" />
        <ListPreference
            android:defaultValue="Orange"
            android:dialogTitle="Select Theme"
            android:entries="@array/themes"
            android:entryValues="@array/theme_codes"
            android:key="@string/selectedThemeKey"
            android:summary="%s"
            android:title="Theme" />
    </org.akvo.caddisfly.preference.PreferenceCategoryCustom>
</PreferenceScreen>
