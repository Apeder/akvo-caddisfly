<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <org.akvo.caddisfly.util.PreferenceCategoryCustom android:title="@string/diagnostics">
        <Preference
            android:key="startTest"
            android:title="Start Colorimetric Test" />
        <Preference
            android:key="cameraPreview"
            android:title="@string/cameraPreview" />
        <Preference
            android:key="externalCamera"
            android:title="@string/externalCamera" />
        <Preference
            android:key="ecSensor"
            android:title="@string/testSensor">
        </Preference>
        <CheckBoxPreference
            android:key="@string/autoFocusKey"
            android:title="@string/autoFocus" />
        <CheckBoxPreference
            android:key="@string/useFlashModeKey"
            android:title="@string/useFlashMode" />
        <CheckBoxPreference
            android:key="@string/ignoreShakeKey"
            android:title="@string/ignoreShakeDuringAnalysis" />
        <CheckBoxPreference
            android:key="showDebugMessages"
            android:title="@string/debuggingOn" />
        <CheckBoxPreference
            android:key="@string/noSoundKey"
            android:title="@string/noSound" />
        <EditTextPreference
            android:defaultValue="1"
            android:dialogMessage="A number from 1 to 5"
            android:key="@string/samplingsTimeKey"
            android:maxLength="2"
            android:numeric="integer"
            android:title="Sampling times" />
        <EditTextPreference
            android:defaultValue="30"
            android:dialogMessage="Enter a value below 100"
            android:key="@string/colorDistanceToleranceKey"
            android:maxLength="3"
            android:numeric="integer"
            android:title="Max color distance" />

    </org.akvo.caddisfly.util.PreferenceCategoryCustom>
</PreferenceScreen>
