<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_white_black_line_bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_ppm_layoutDescView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="12sp"
        android:layout_marginTop="5sp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Contaminant" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <org.akvo.caddisfly.sensor.colorimetry.strip.ui.CircleView
            android:id="@+id/result_ppm_layoutCircleView"
            android:layout_width="@dimen/ppm_circle_area"
            android:layout_height="@dimen/ppm_circle_area" />

        <TextView
            android:id="@+id/text_result_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/result_ppm_layoutImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

</LinearLayout>