<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:id="@+id/layoutDiagnostics"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/buttonDisableDiagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:alpha="0.7"
            android:background="@drawable/green_button"
            android:text="@string/enableUserMode"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="80dp"
            android:ellipsize="none"
            android:rotation="-40"
            android:singleLine="true"
            android:text="@string/diagnostics"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#3f052e2a"
            android:textSize="230sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/buttonStartSurvey"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_orange"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/startSurvey"
            tools:ignore="UnusedAttribute" />

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/button_orange"-->
        <!--android:gravity="center"-->
        <!--android:paddingBottom="50dp"-->
        <!--android:lineSpacingExtra="10dp"-->
        <!--android:paddingTop="50dp"-->
        <!--android:paddingStart="10dp"-->
        <!--android:paddingEnd="10dp"-->
        <!--android:text="To conduct a test open Akvo FLOW"-->
        <!--android:textSize="18sp" />-->
    </RelativeLayout>
</FrameLayout>

