<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?primaryBackgroundStyle"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSurvey"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableEnd="@drawable/arrow_right_light"
                android:gravity="center_vertical|start"
                android:minHeight="80dp"
                android:paddingEnd="16dp"
                android:paddingStart="22dp"
                android:text="@string/survey"
                android:textAlignment="viewStart"
                android:textColor="?longButtonText"
                android:theme="?longButtonStyle" />

            <Button
                android:id="@+id/buttonEcSensor"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow_right_light"
                android:gravity="center_vertical|start"
                android:minHeight="80dp"
                android:paddingEnd="16dp"
                android:paddingStart="22dp"
                android:text="@string/electricalConductivity"
                android:textAlignment="viewStart"
                android:textColor="?longButtonText"
                android:theme="?longButtonStyle" />

            <Button
                android:id="@+id/buttonCalibrate"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow_right_light"
                android:gravity="center_vertical|start"
                android:minHeight="80dp"
                android:paddingEnd="16dp"
                android:paddingStart="22dp"
                android:text="@string/calibrate"
                android:textAlignment="viewStart"
                android:textColor="?longButtonText"
                android:theme="?longButtonStyle" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutSlogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="none"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/waterQuality"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#22007a8d"
            android:textSize="50dp"
            tools:ignore="SpUsage" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDiagnostics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textDiagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:ellipsize="none"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/diagnostics"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2a007a8d"
            android:textSize="50dp"
            tools:ignore="SpUsage" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabDisableDiagnostics"
            style="@style/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textDiagnostics"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-30dp"
            android:src="@android:drawable/ic_menu_revert"
            app:backgroundTint="@color/diagnostic"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</merge>

