<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/layoutDiagnostics"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Button
            android:id="@+id/buttonDisableDiagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:alpha="0.7"
            android:background="@drawable/green_button"
            android:text="@string/enableUserMode"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="560dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="80dp"
            android:ellipsize="none"
            android:rotation="-40"
            android:singleLine="true"
            android:text="@string/diagnostics"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#3f052e2a"
            android:textSize="230sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textOpenApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:paddingBottom="50dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="50dp"
            android:shadowColor="#0d4006"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text="@string/toConductTestOpenApp"
            android:textColor="#e3ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
</FrameLayout>

