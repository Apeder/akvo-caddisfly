<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:ellipsize="none"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Water Quality"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#22007a8d"
            android:textSize="50dp"
            tools:ignore="SpUsage" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDiagnostics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textDiagnostics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:ellipsize="none"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/diagnostics"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#2a007a8d"
            android:textSize="50dp"
            tools:ignore="SpUsage" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabDisableDiagnostics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/fap_margin"
            android:layout_marginEnd="@dimen/fap_margin"
            android:baselineAlignBottom="false"
            android:src="@android:drawable/ic_menu_revert"
            app:backgroundTint="@color/red"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCalibrate"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableEnd="@drawable/arrow_right_light"
            android:minHeight="80dp"
            android:paddingStart="20dp"
            android:text="@string/calibrate"
            android:textAlignment="viewStart"
            android:textColor="#e2e0e0"
            android:theme="@style/Button.Blue"
            tools:ignore="RtlSymmetry" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="#22003b69"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Performing a Test"
                    android:textColor="#e2e0e0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="To perform a water quality test, open Akvo FLOW app and fill the appropriate survey."
                    android:textColor="#e2e0e0"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>

