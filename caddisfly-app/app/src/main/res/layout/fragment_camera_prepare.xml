<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".sensor.colorimetry.strip.camera_strip.CameraPrepareFragment">

    <include
        android:id="@+id/activity_cameraMessagesLayout"
        layout="@layout/quality_checks" />

    <TextView
        android:id="@+id/activity_cameraPrepareCountQualityView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_cameraMessagesLayout"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="16sp"
        tools:text="Quality checks: 0 out of 15" />

    <TextView
        android:id="@+id/activity_cameraPrepareTextView"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_cameraStartButton"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="4dp"
        android:text="@string/prepare_camera_instr"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_cameraStartButton"
        style="@style/Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/start"
        android:theme="?primaryButtonStyle" />
</RelativeLayout>

