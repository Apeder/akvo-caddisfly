<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDilutions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="org.akvo.caddisfly.sensor.colorimetry.strip.ColorimetryStripActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="32sp"
        android:textStyle="normal"
        android:visibility="visible"
        tools:text="Contaminant" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="To be implemented"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="normal"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonOk"
        style="@style/Button"
        android:layout_marginTop="10dp"
        android:text="@string/backToSurvey"
        android:theme="@style/Button.Orange" />

</LinearLayout>

