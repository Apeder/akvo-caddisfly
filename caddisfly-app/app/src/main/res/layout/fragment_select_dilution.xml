<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.akvo.caddisfly.sensor.colorimetry.liquid.SelectDilutionFragment">

    <LinearLayout
        android:id="@+id/layoutDilutions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonNoDilution"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:minHeight="70dp"
            android:minWidth="300dp"
            android:text="@string/noDilution"
            android:theme="?secondaryButtonStyle" />

        <Button
            android:id="@+id/buttonDilution1"
            style="@style/Button"
            android:layout_marginBottom="10dp"
            android:minHeight="70dp"
            android:minWidth="300dp"
            android:text="@string/timesDilution"
            android:theme="?secondaryButtonStyle" />

        <Button
            android:id="@+id/buttonDilution2"
            style="@style/Button"
            android:minHeight="70dp"
            android:minWidth="300dp"
            android:text="@string/timesDilution"
            android:theme="?secondaryButtonStyle" />
    </LinearLayout>


</FrameLayout>
