<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_black_line_bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/result_ppm_layoutDescView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginTop="5sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/result_ppm_layoutImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <org.akvo.caddisfly.sensor.colorimetry.strip.ui.CircleView
            android:id="@+id/result_ppm_layoutCircleView"
            android:layout_width="@dimen/ppm_circle_area"
            android:layout_height="@dimen/ppm_circle_area" />

        <TextView
            android:id="@+id/text_ppm_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin" />
    </LinearLayout>
</LinearLayout>