<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    tools:context=".sensor.colorimetry.strip.result_strip.ResultActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_resultButtonSave"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/activity_resultLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/activity_resultButtonSave"
        style="@style/Button"
        android:layout_above="@+id/button_result_Redo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:minWidth="250dp"
        android:text="@string/save"
        android:theme="?primaryButtonStyle" />

    <Button
        android:id="@+id/button_result_Redo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:text="@string/redo_test"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
