<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.akvo.akvoqr">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    />
    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".choose_striptest.ChooseStriptestListActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity
            android:name=".instructions_app.InstructionActivity"
            android:label="@string/title_instruction_list"
            android:parentActivityName=".choose_striptest.ChooseStriptestDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".choose_striptest.ChooseStriptestDetailActivity" />
        </activity>
        <activity
            android:name=".choose_striptest.ChooseStriptestDetailActivity"
            android:label="@string/title_instruction_detail"
            android:parentActivityName=".choose_striptest.ChooseStriptestListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".choose_striptest.ChooseStriptestListActivity" />
        </activity>
        <activity
            android:name=".DetectStripActivity"
            android:label="@string/title_activity_detect_strip"
            android:parentActivityName=".choose_striptest.ChooseStriptestListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".choose_striptest.ChooseStriptestListActivity" />
        </activity>
        <activity android:name=".UncaughtExceptionActivity">
            <intent-filter>
                <action android:name="com.mydomain.SEND_LOG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
