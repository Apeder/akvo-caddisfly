<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activity_cameraMainRelativeLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camera_preview"
        >
    </FrameLayout>
    <org.akvo.akvoqr.ui.FinderPatternIndicatorView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/activity_cameraFinderPatternIndicatorView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_preview_messageDurationView"
        android:textColor="@color/lightblue"
        android:background="#99000000"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="@string/duration"/>
    <org.akvo.akvoqr.ui.ProgressIndicatorView
        android:layout_width="@dimen/ppm_circle_area"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/camera_preview_messageDurationView"
        android:id="@+id/activity_cameraProgressIndicatorView"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:id="@+id/activity_cameraMessagesLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview_messageLightView"
            android:textColor="@android:color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:background="@drawable/button_semi_transparent_grey_oval"
            android:layout_gravity="center_horizontal"
            android:text="@string/light"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exposure_red"
            android:layout_gravity="center_horizontal"
            android:id="@+id/activity_cameraImageViewExposure"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview_messageFocusView"
            android:textColor="@android:color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:background="@drawable/button_semi_transparent_grey_oval"

            android:layout_gravity="center_horizontal"
            android:text="@string/focus"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/focus_red"
            android:layout_gravity="center_horizontal"
            android:id="@+id/activity_cameraImageViewFocus"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_button"
        android:layout_centerInParent="true"
        android:id="@+id/activity_cameraStartButton"
        android:visibility="invisible"/>
</RelativeLayout>