<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/activity_cameraMainRelativeLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:id="@+id/camera_preview"
        >
    </FrameLayout>
    <org.akvo.akvoqr.ui.FinderPatternIndicatorView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:id="@+id/activity_cameraFinderPatternIndicatorView"
        />
    <View
        android:id="@+id/transparent_window"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent" />

    <View
        android:id="@+id/black_bottom_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/transparent_window"
        android:background="@android:color/background_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/camera_preview_messageDurationView"
        android:textColor="@color/lightblue"
        android:background="#99000000"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/transparent_window"
        android:gravity="right"
        android:text="@string/duration"/>
    <org.akvo.akvoqr.ui.ProgressIndicatorView
        android:layout_width="@dimen/ppm_circle_area"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/camera_preview_messageDurationView"
        android:id="@+id/activity_cameraProgressIndicatorView"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/transparent_window"
        android:id="@+id/activity_cameraMessagesLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview_messageLightView"
            android:textColor="@android:color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:background="@drawable/button_semi_transparent_grey_oval"
            android:layout_gravity="center_horizontal"
            android:text="@string/light"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exposure_red"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/activity_cameraImageViewExposure"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview_messageFocusView"
            android:textColor="@android:color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:background="@drawable/button_semi_transparent_grey_oval"
            android:layout_gravity="center_horizontal"
            android:text="@string/focus"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/focus_red"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/activity_cameraImageViewFocus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview_messageContrastView"
            android:textColor="@android:color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:background="@drawable/button_semi_transparent_grey_oval"
            android:layout_gravity="center_horizontal"
            android:text="@string/contrast"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contrast_red"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/activity_cameraImageViewContrast"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview_messageLevelView"
            android:textColor="@android:color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:background="@drawable/button_semi_transparent_grey_oval"
            android:layout_gravity="center_horizontal"
            android:text="Level"/>
        <org.akvo.akvoqr.ui.LevelView
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/activity_cameraImageViewLevel"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_cameraStartButton"
        android:visibility="invisible"/>
</RelativeLayout>