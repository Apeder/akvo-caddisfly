<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/instruction_list"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/progressLin"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/progress_icon_vert_bar"
                android:scaleType="fitXY"
                android:id="@+id/progress_end"
                android:layout_alignBottom="@+id/activity_instruction_listStartButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/progress_icon_hor_bar"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="-18dp"
                android:scaleType="fitXY"
                android:layout_gravity="bottom"
                android:id="@+id/progress_hor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_start_selector"
            android:text="@string/start"
            android:textColor="@android:color/white"
            android:id="@+id/activity_instruction_listStartButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
</LinearLayout>